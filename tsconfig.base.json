{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@pixi-animation-library/pixiani-core": ["packages/pixiani-core/src/index.ts"],
      "@pixi-animation-library/pixiani-core/*": ["packages/pixiani-core/src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
