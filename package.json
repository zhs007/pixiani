{
  "name": "pixi-animation-library",
  "version": "1.0.0",
  "description": "A web game animation library using Pixi.js",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite --config demo/vite.config.ts",
    "dev:editor": "tsx watch editor/server.ts",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "vite build --config vite.lib.config.ts",
    "build:demo": "vite build --config demo/vite.config.ts",
    "test": "vitest run --root .",
    "coverage": "vitest run --coverage --root ."
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@types/uuid": "*",
    "@vitejs/plugin-react": "*",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^26.1.0",
    "tsx": "*",
    "typescript": "^5.4.5",
    "undici": "^6.21.3",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@fastify/static": "*",
    "@fastify/vite": "*",
    "@google/generative-ai": "*",
    "dotenv": "*",
    "fastify": "*",
    "pixi.js": "^8.1.6",
    "react": "*",
    "react-dom": "*",
    "uuid": "*"
  },
  "files": [
    "dist"
  ]
}
