{
  "name": "pixi-animation-library",
  "version": "1.0.0",
  "description": "A web game animation library using Pixi.js",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "vite build --config vite.lib.config.ts",
    "build:demo": "vite build",
    "test": "vitest run --root .",
    "coverage": "vitest run --coverage --root ."
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@vitest/coverage-v8": "^1.6.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "pixi.js": "^8.1.6"
  },
  "files": [
    "dist"
  ]
}
