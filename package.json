{
  "name": "pixi-animation-library",
  "version": "1.0.0",
  "description": "A web game animation library using Pixi.js",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite --config demo/vite.config.ts",
    "dev:editor": "tsx watch editor/server.ts",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "vite build --config vite.lib.config.ts",
    "build:demo": "vite build --config demo/vite.config.ts",
    "test": "vitest run --root .",
    "coverage": "vitest run --coverage --root .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:editor": "tsc -p editor/tsconfig.json --noEmit",
    "typecheck:all": "npm run -s typecheck && npm run -s typecheck:editor",
    "ci": "npm run -s lint && npm run -s format:check && npm run -s typecheck:all && npm run -s test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@types/uuid": "*",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "*",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.6",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "tsx": "*",
    "typescript": "^5.4.5",
    "undici": "^6.21.3",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "*",
    "@fastify/vite": "*",
    "@google/generative-ai": "*",
    "@types/busboy": "^1.5.4",
    "dotenv": "*",
    "fastify": "*",
    "pixi.js": "^8.1.6",
    "react": "*",
    "react-dom": "*",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "uuid": "*"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css,scss,html}": [
      "prettier --write"
    ]
  }
}
